<screen>
	<view width="240" height="240"
		style_bg_color="#bg_dark"
		style_bg_opa="255"
		style_border_width="0"
		style_radius="120">

		<!-- Arc Gauge für RAM -->
		<lv_arc
			x="0" y="0"
			width="200" height="200"
			align="center"
			value="68"
			rotation="0"
			bg_start_angle="0"
			bg_end_angle="360"
			start_angle="0"
			end_angle="360"
			mode="normal"
			style_arc_width="18"
			style_arc_color="#bg_gray"
			style_arc_opa="255"
			style_arc_rounded="true"/>

		<!-- Titel -->
		<lv_label
			text="RAM"
			x="0" y="-35"
			width="240"
			align="center"
			style_text_color="#text_gray"
			style_text_align="center"/>

		<!-- RAM Prozent (große Anzeige) -->
		<lv_label
			text="68%"
			x="0" y="0"
			width="240"
			align="center"
			style_text_color="#ram_color"
			style_text_align="center"/>

		<!-- RAM Usage -->
		<lv_label
			text="10.9 / 16.0 GB"
			x="0" y="35"
			width="240"
			align="center"
			style_text_color="#text_white"
			style_text_align="center"/>
	</view>
</screen>
